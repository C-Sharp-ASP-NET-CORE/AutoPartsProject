@model AddPartFormModel

@{
    ViewData["Title"] = "Add Part";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Add Car</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                   {
                       <option value="@category.Id">@category.Name</option>
                   }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer"></label>
                <input asp-for="Manufacturer" class="form-control" placeholder="Germany Cars, Parts OOD, etc.">
                <span asp-validation-for="Manufacturer" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarBrand"></label>
                <input asp-for="CarBrand" class="form-control" placeholder="Mercedes, Audi, etc.">
                <span asp-validation-for="CarBrand" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel"></label>
                <input asp-for="CarModel" class="form-control" placeholder="W211, A5, E90 etc.">
                <span asp-validation-for="CarModel" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="leva">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Describe your product here"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerialNumber"></label>
                <input asp-for="SerialNumber" class="form-control" placeholder="XF45T etc.">
                <span asp-validation-for="SerialNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
             <div class="form-group">
                <input asp-for="IsUsed">
                <label asp-for="IsUsed"></label>
                <span asp-validation-for="IsUsed" class="small text-danger"></span>
            </div>
            
            <input class="btn btn-primary float-right" type="submit" value="Save" />
        </form>
    </div>
</div>