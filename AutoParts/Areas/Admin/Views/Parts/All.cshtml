@model IEnumerable<PartServiceModel>

@{
    ViewBag.Title = "Parts Administation";
}


<h1>All Parts</h1>

<div class="card-body">
    <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
        <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover dataTable dtr-inline">
                    <thead>
                        <tr>
                            <th class="sorting sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">Id</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Category</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Car Brand</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Car Model</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Year</th>
                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Approved</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var part in Model)
                        {
                            <tr>
                                <td>@part.Id</td>
                                <td>@part.CategoryName</td>
                                <td>@part.CarBrand</td>
                                <td>@part.CarModel</td>
                                <td>@part.Year</td>
                                <td>@(part.IsPublic ? "Yes" : "No")</td>
                                <td>
                                    <a asp-area="" asp-controller="Parts" asp-action="Delete" asp-route-id="@part.Id" class="btn btn-danger float-right ml-3">Delete</a>
                                    <a asp-area="" asp-controller="Parts" asp-action="Edit" asp-route-id="@part.Id" class="btn btn-warning float-right ml-3">Edit</a>
                                    <a asp-area="Admin" asp-controller="Parts" asp-action="ChangeVisibility" asp-route-id="@part.Id" class="btn btn-info float-right ml-3">@(part.IsPublic ? "Hide" : "Approve")</a>
                                    <a asp-area="" asp-controller="Parts" asp-action="Details" asp-route-id="@part.Id" asp-route-information="@part.ToReadableURL()" class="btn btn-primary float-right ml-3">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div><div class="row">
            <div class="col-sm-12 col-md-5">
                <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">
                    Showing 1 to 10 of @Model.Count()
                </div>
            </div>
            <div class="col-sm-12 col-md-7">
                <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                    <ul class="pagination">
                        <li class="paginate_button page-item previous disabled" id="example2_previous">
                            <a href="#" aria-controls="example2" data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
                        </li>
                        <li class="paginate_button page-item active">
                            <a href="#" aria-controls="example2" data-dt-idx="1" tabindex="0" class="page-link">1</a>
                        </li>
                        <li class="paginate_button page-item next" id="example2_next">
                            <a href="#" aria-controls="example2" data-dt-idx="0" tabindex="0" class="page-link">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
